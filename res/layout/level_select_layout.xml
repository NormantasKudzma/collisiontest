<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.nk.bloxmania.ScrollBackgroundView
        android:id="@+id/level_select_scroll_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/empty_string"
        android:tag="@integer/level_select_tag"
    	android:background="@drawable/bg4"/>
    
    <TextView
        android:id="@+id/level_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textSize="32sp"
        android:textColor="#000"
        android:text="@string/level_title" />

    <TableLayout
        android:id="@+id/level_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_label"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp" >
    </TableLayout>

</RelativeLayout>
